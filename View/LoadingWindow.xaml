<Window x:Class="ChangeProperties.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Title="Zmiana właściwości" Height="200" Width="300">
    <Grid>
        <Border Background="White" CornerRadius="10" Padding="20">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Ładowanie..." FontSize="16" FontWeight="Bold" TextAlignment="Center"/>
                <ProgressBar IsIndeterminate="True" Height="20" Width="200" Margin="10"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
